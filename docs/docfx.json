{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource":[
      {
        "files": ["icon.svg"]
      }
    ],
    "output": "../_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Sensing4U Dashboard",
      "_appTitle": "Sensing4U Dashboard",
      "_appLogoPath": "icon.svg",
      "_appFaviconPath": "icon.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}